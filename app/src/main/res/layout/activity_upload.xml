<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.praveen.lab4.UploadActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="-10dp">

        <Button
            android:id="@+id/choose_button"
            android:layout_width="266dp"
            android:layout_height="49dp"
            android:layout_marginTop="39dp"
            android:text="Choose Photo"
            tools:layout_editor_absoluteX="59dp"
            tools:layout_editor_absoluteY="390dp"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/editText" />


        <EditText
            android:id="@+id/editText"
            android:layout_width="269dp"
            android:layout_height="47dp"
            android:layout_marginBottom="12dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:hint="Description"
            tools:layout_editor_absoluteX="58dp"
            tools:layout_editor_absoluteY="266dp"
            android:layout_above="@+id/upload_button"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="267dp"
            android:layout_height="229dp"
            android:text="Select Photos"
            app:srcCompat="@drawable/common_google_signin_btn_icon_light_normal_background"
            tools:layout_editor_absoluteX="59dp"
            tools:layout_editor_absoluteY="16dp"
            android:layout_above="@+id/private_switch"
            android:layout_alignStart="@+id/choose_button" />

        <Switch
            android:id="@+id/private_switch"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Private  "
            android:layout_above="@+id/editText"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/upload_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/choose_button"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/choose_button"
            android:layout_marginBottom="17dp"
            android:text="Upload" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
